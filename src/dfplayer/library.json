{
    "name": "rootham-dfplayer",
    "version": "1.0.0",
    "description": "Simplified interface for DFRobot DFPlayer Mini with robust connection handling and playback control",
    "keywords": [
        "dfplayer",
        "audio",
        "mp3",
        "player",
        "rootham",
        "esp32",
        "arduino"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/rootham-audio-libs"
    },
    "authors": [
        {
            "name": "Your Name",
            "email": "your@email.com",
            "maintainer": true,
            "url": "https://github.com/codeham297"
        }
    ],
    "license": "MIT",
    "homepage": "https://github.com/yourusername/rootham-audio-libs",
    "frameworks": [
        "arduino"
    ],
    "platforms": [
        "espressif32",
        "espressif8266",
        "atmelavr"
    ],
    "dependencies": {
        "dfrobot/DFRobotDFPlayerMini": "^1.0.5"
    },
    "export": {
        "include": [
            "src/*",
            "include/*"
        ],
        "exclude": [
            "tests/*",
            "examples/*/build/*",
            ".github/*"
        ]
    },
    "build": {
        "flags": [
            "-Wall",
            "-Wextra"
        ],
        "srcDir": "src",
        "includeDir": "include"
    }
}